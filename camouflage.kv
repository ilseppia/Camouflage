#:kivy 1.9.1
#:import os os


<GameScene>:
    canvas:
        Rectangle:
            size: self.size
            source: self.background

            
<Map>:
    canvas:
        Rectangle:
            size: self.size
            source: self.background

<GridLayout>:
    canvas:
        Color:
            rgba: 0.8, 0.8, 0.8, 0.2
        Rectangle:
            size: self.size
            pos: self.pos  
            
<Identikit_debug>:
    canvas:
        Color:
            rgba: 0, 1, 1, 0.2
        Rectangle:
            size: self.size

            
<RelativeLayout_debug>            
    canvas:
        Color:
            rgba: 1, 0, 0, 0.1    
        Rectangle:
            size: self.size
            pos: self.pos


               